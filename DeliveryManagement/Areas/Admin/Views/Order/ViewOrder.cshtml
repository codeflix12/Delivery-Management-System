
@model IEnumerable<DeliveryManagement.order_master>
   
    
     @{
    ViewBag.Title = "ViewOrder";
    int i = 0;
}

<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang=""> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8" lang=""> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9" lang=""> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang=""> <!--<![endif]-->
<head>
    <title>View Orders</title>
    <style>
        .newbtn {
        float: right;
        padding: 0px 700px;
        }
    </style>
    @{Html.RenderAction("Style","Include");}
</head>
<body>
        <!-- Left Panel -->


    @{Html.RenderAction("SideNav","Include");}
<!-- /#left-panel -->

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        @{Html.RenderAction("Header", "Include");}
       <!-- /header -->
        <!-- Header-->
        

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

               
                  @using(Html.BeginForm())
                  {
                      <div class="container">
                          <div class="row">
                              <div class="col-mg-3" style="margin-left:900px; margin-bottom:10px;">
                        
                    @Html.ActionLink("Add New Order", "AddOrder", "Order", new { @class = "btn btn-primary newbtn"})
                              </div>
                             </div>
                            </div>
                  }
                     <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Data Table</strong>
                        </div>
                        <div class="card-body">
                  <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                          <th>Sr. No.</th>
                        <th>Name</th>
                        <th>Delivery Item</th>
                        <th>Charge</th>
                        <th>Date</th>
                        <th>Edit Details</th>
                        <th>Delete Details</th>
                      </tr>
                    </thead>
                    <tbody>
                        @foreach(var driver in Model)
                        {
                      <tr>
                          <td>@{ i++; }
                            @i</td>
                        <td>@driver.mobileno</td>
                        <td>@driver.deliveryitem</td>
                        <td>@driver.deliverycharge</td>
                        <td>@driver.deliverydate</td>
                        <td>@Html.ActionLink("Edit", "Edit", new {id = driver.id})</td>
                        <td>@Html.ActionLink("Delete","Delete", new {id = driver.id})</td>
                      </tr>
                        }
                     
                    </tbody>
                  </table>
                        </div>
                    </div>
                </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


    </div><!-- /#right-panel -->

    <!-- Right Panel -->


    <script src="~/Content/Admin/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Content/Admin/js/popper.min.js"></script>
    <script src="~/Content/Admin/js/plugins.js"></script>
    <script src="~/Content/Admin/js/main.js"></script>


    <script src="~/Content/Admin/js/lib/data-table/datatables.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/buttons.bootstrap.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/jszip.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/pdfmake.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/vfs_fonts.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/buttons.print.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/buttons.colVis.min.js"></script>
    <script src="~/Content/Admin/js/lib/data-table/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function() {
          $('#bootstrap-data-table-export').DataTable();
        } );
    </script>


</body>
</html>

